{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}

<style>
    
</style>

<div class="container-fluid">
    {% if app.user %}
            <div id="main" class="col-lg-10 col-sm-11 mx-auto text-center main">
                <h2>{{ recipes.name }}</h2>            
                    <div class="gallery_product d-inline col-lg-4 col-md-6 col-12 align-baseline">
                        <a href="#" class="d-block mb-4">
                            <img src={{ asset('uploads/imgFilename/' ~ recipes.imgFilename) }} alt="recipe" id="img-profil" class="img-fluid img-thumbnail active">
                        </a>
                    </div>    
                    <div class="d-inline align-text-top">
                        <h5>Description</h5>
                        <p>{{ recipes.description }}</p>
                        <h5>Temps de préparation</h5>
                        <p>{ { recipes.preparationTime }}</p>
                        <h5>Temps de repos</h5>
                        <p>{{ recipes.break }}</p>
                        <h5>Temps de cuisson</h5>
                        <p>{{ recipes.cookingTime }}</p>
                        <h5>Liste des ingrédients</h5>
                        <p>{{ recipes.ingredients }}</p>
                        <h5>Les étapes à suivre</h5>
                        <p>{{ recipes.steps }}</p>   
                        <div class="col-lg-12">
                            <h2 class="mt-30">Commentaires</h2>
                            {% for comment in comments %}  
                                <div id="comment" class="col-10 mx-auto my-4 text-left comment">
                                    <p>{{ commentUser.firstname }} {{ commentUser.lastname }}</p>  
                                    <p>{{ comment.date|date('Y-m-d H:i:s')}}</p> 
                                    <p>{{ comment.comment }}</p>
                                </div>
                            {% endfor %}
  
                        </div>
                    </div>
                    <div id="main" class="col-lg-8 col-sm-11 mx-auto text-center main">
                        {{ form_errors(commentForm) }}

                        {{ form_start(commentForm) }}
                            {{ form_row(commentForm.comment) }}

                            <button type="submit" class="btn">Envoyer</button>
                        {{ form_end(commentForm) }}
                    </div>
            </div>
    {% endif %}

</div>

{% endblock %}
